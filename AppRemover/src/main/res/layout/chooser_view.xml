<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expand_activities_button"
    style="?attr/activityChooserViewStyle"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:minHeight="?attr/dropdownListPreferredItemHeight"
    android:layout_gravity="center"    
    android:focusable="true"
    android:addStatesFromChildren="true"
    android:background="?attr/actionBarItemBackground">

    <TextView 
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingRight="12dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:text="@string/order_by_time_unused_action_bar"
        android:textColor="@color/textActionBar"
        android:textSize="@dimen/abc_text_size_title_material_toolbar"
        style="?attr/spinnerDropDownItemStyle" />
    
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="6.66dip"        
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="right|bottom"
        android:src="@drawable/menu_dropdown" />
    
</FrameLayout>

